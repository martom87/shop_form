gem 'devise'
gem 'devise-bootstrap-views'
gem 'devise-i18n'
gem 'font-awesome-rails'
gem 'haml-rails'
gem 'html2haml'
gem 'jbuilder', '~> 2.5'
gem 'jquery-rails'
gem 'pg'
gem 'pry'
gem 'pry-rails'
gem 'puma', '~> 3.11'
gem 'rubocop', '~> 0.64.0', require: false
gem 'sass-rails'
gem 'sdoc', '~> 0.4.0', group: :doc
gem 'simple_form', '~> 4.1'
gem 'simplecov'
